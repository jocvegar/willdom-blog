<%= form_with(model: article, local: true) do |f| %>
  <% if article.errors.any? %>
    <div id="error_explanation" class="mt-2">
      <h6 class="text-center">
        <%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:
      </h6>
      <ul class="text-center list-unstyled">
        <% article.errors.full_messages.each do |message| %>
          <li class="text-danger"><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row my-3">
    <div class="col-12 col-md-8 offset-md-2 my-3">
      <%= label_tag :title, "Title", class: "form-label" %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="col-12 col-md-8 offset-md-2 my-3">
      <%= label_tag :content, "Content", class: "form-label" %>
      <%= f.text_area :content, class: "form-control", size: "20x8" %>
    </div>

    <%= content_tag :div, class: "col-12 col-md-8 offset-md-2 my-3 text-center" do %>
      <%= image_tag @article.image.variant({
        resize_to_limit: [280, 280]
      }),
      class: "img-thumbnail" %>
    <% end if @article.image.attached?%>

    <div class="col-12 col-md-8 offset-md-2 my-3">
      <%= label_tag :image, "Image", class: "form-label" %>
      <%= f.file_field :image, class: "form-control" %>
    </div>
    <br>
    <div class="col-12 col-md-8 offset-md-2 my-3">
      <%= f.submit accion_verb, class: "btn btn-dark btn-block" %>
    </div>
  </div>
<% end %>
