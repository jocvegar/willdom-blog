<div id="article" class="container mt-4">
  <div class="row">
    <div class="col-12">
      <nav aria-label="breadcrumb" class="d-none d-md-inline-block">
        <ol class="breadcrumb breadcrumb-dark breadcrumb-transparent">
          <li class="breadcrumb-item">
            <a href="/"><span class="fas fa-home"></span></a>
          </li>
          <li class="breadcrumb-item active" aria-current="page">
            <%= @article.title %>
          </li>
        </ol>
      </nav>

      <%= content_tag :div, class: "row" do %>
				<div class="col">
					<div class="btn-group float-right" role="group">
						<%= link_to root_path,
							class: "btn btn-sm btn-outline-dark" do %>
							<i class="fas fa-chevron-left"></i>
							Back
						<% end %>
						<%= link_to edit_article_path(@article),
							class: "btn btn-sm btn-outline-dark" do %>
							<i class="fas fa-cog"></i>
						  Edit
						<% end if current_user %>
					</div>
				</div>
			<% end %>

      <div class="row">
				<div class="col-12">
					<h2 class="display-4 text-center">
						<%= @article.title %>
					</h2>
				</div>

				<%= content_tag :div, class: "col-12 my-5" do %>
					<div class="text-center">
					  <%= image_tag @article.image.variant(
					    resize_to_limit: [800, 800],
					    saver: { quality: 80 }
					  ), class: "img-fluid" %>
					</div>
				<% end if @article.image.attached? %>

				<div class="col-12 my-5">
					<p class="lead">
					  <%= @article.content %>
					</p>
				</div>
      </div>
    </div>
  </div>
</div>
